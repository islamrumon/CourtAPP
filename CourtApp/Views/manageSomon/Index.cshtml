<table class="table table-striped table-bordered" id="datatable">
    <thead class="grey lighten-2">
        <tr style="text-align:center">
            <th>
                ক্রমিক নং
            </th>
            <th>
                সমন নং
            </th>
            <th>
                সমন তারিখ
            </th>
            <th>
                কেস তারিখ
            </th>
            <th>
                আদালত
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
           
            <tr id="TR_@Html.DisplayFor(modelItem => item.SMID)">
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.SerialNum)
                </td>
                <td>
                    <a data-toggle="tooltip" title="বিস্তারিত জানার জন্য এখানে ক্লিক করুন" class="nav-link" href="/manageSomon/Details/@item.SMID" target="_blank">
                        @Html.DisplayFor(modelItem => item.SMNUM)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SMDAT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CASENUM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.courtName)
                </td>


            </tr>
        }
        
    </tbody>
   

</table>




